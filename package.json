{
  "name": "things-mcp",
  "version": "0.1.0",
  "description": "A Model Context Protocol (MCP) server that provides seamless integration with the Things productivity app.",
  "main": "dist/index.js",
  "type": "module",
  "private": false,
  "bin": {
    "things-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "things",
    "culturedcode",
    "culturedcode.com",
    "culturedcode.com/things",
    "culturedcode.com/things/mcp"
  ],
  "author": "Kevin Berny",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinberny/things-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/kevinberny/things-mcp/issues"
  },
  "homepage": "https://github.com/kevinberny/things-mcp#readme",
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  }
}
